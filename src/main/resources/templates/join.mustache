{{>layout/header}}
<head>
    <link rel="stylesheet" href="/css/join.css">
</head>
<div class="container">
    <div class="con-center">
        <form action="" method="">
            <div class="join">
                <div class="join-subject">
                    <h1>회원가입</h1>
                </div>
                <div class="join-box">
                    <div class="id-box">
                        <label for="join-id">아이디</label>
                        <input type="text" placeholder="아이디 입력하세요" id="join-id">
                    </div>
                    <div class="pw-box">
                        <label for="join-pw">비밀번호</label>
                        <input type="password" placeholder="비밀번호를 입력하세요" id="join-pw">
                    </div>
                    <div class="name-box">
                        <label for="join-name">이름</label>
                        <input type="text" placeholder="이름 입력하세요" id="join-name">
                    </div>
                    <div class="phone-box">
                        <label for="join-phone">연락처</label>
                        <input type="password" placeholder="연락처를 입력하세요" id="join-phone">
                    </div>
                </div>
                <button>가입하기</button>
            </div>
        </form>
    </div>
</div>
{{>layout/footer}}